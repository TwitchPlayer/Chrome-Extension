{
  "manifest_version": 2,
  "name": "TwitchPlayer",
  "version": "4",
  "background": {
      "scripts": ["src/main.js"]
  },
  "content_scripts": [
      {
        "matches": ["*://www.twitch.tv/directory/*"],
        "js": ["lib/jquery-3.0.0.min.js","src/content.js"],
        "css" : ["css/main.css"],
        "run_at": "document_idle"
      }
    ],
  "permissions": [
  	"contextMenus",
  	"http://localhost/*"
  	],
  "icons" : {
    "16" : "icons/TwitchPlayer-16.png",
    "48" : "icons/TwitchPlayer-48.png",
    "128" : "icons/TwitchPlayer-128.png"
  }
}